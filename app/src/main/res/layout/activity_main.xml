<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deshiksridharan.deltatask1.MainActivity">

    <Button
        android:text="RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RED"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignBaseline="@+id/BLUE"
        android:layout_alignBottom="@+id/BLUE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="GREEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GREEN"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignBaseline="@+id/BLUE"
        android:layout_alignBottom="@+id/BLUE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="BLUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BLUE"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLOR CHANGER"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:id="@+id/Colorchanger"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Green"
        android:layout_alignBaseline="@+id/Blue"
        android:layout_alignBottom="@+id/Blue"
        android:layout_toEndOf="@+id/Colorchanger"
        android:layout_toRightOf="@+id/Colorchanger" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blue"
        android:layout_alignBaseline="@+id/Red"
        android:layout_alignBottom="@+id/Red"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Red"

        android:layout_marginTop="99dp"
        android:layout_below="@+id/RED"
        android:layout_alignLeft="@+id/Colorchanger"
        android:layout_alignStart="@+id/Colorchanger" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BLUE"
        android:layout_alignStart="@+id/BLUE"
        android:layout_below="@+id/Blue"
        android:layout_marginTop="31dp"
        android:text="RESET" />

</RelativeLayout>